create counter.js


import React, { useState } from "react";

function Counter() {
  const [count, setCount] = useState(0);   // initialize state

  return (
    <div>
      <h2>Counter: {count}</h2>

      <button onClick={() => setCount(count + 1)}>
        Increment
      </button>
    </div>
  );
}

export default Counter;
